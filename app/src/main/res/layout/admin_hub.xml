<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/adminHubLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_gradient_background"
    android:padding="16dp">

    <ImageButton
        android:id="@+id/logoutButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_logout"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="התנתק"
        android:onClick="logout"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/titleTextView"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:src="@drawable/megamatch_text"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="8dp"
        android:adjustViewBounds="true"
        android:contentDescription="MegaMatch"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/adminTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="לוח בקרה למנהל מערכת"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:shadowColor="#000000"
        android:shadowDx="1.5"
        android:shadowDy="1.5"
        android:shadowRadius="2"
        android:background="@drawable/title_background"
        android:padding="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/titleTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/adminTitleTextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="32dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/logoImageView"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:src="@drawable/icon_white"
                android:contentDescription="@string/app_name"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/addSchoolButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="הוסף בתי ספר"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"
                android:onClick="moveToAddSchool"
                app:icon="@drawable/ic_school_building"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                app:iconTint="@color/white"
                app:strokeWidth="2dp"
                style="@style/Widget.MegaMatch.Button"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/addManagerButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="הוסף מנהל/ים"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="32dp"
                android:onClick="moveToSchoolSelect"
                app:icon="@drawable/ic_admin"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                app:iconTint="@color/white"
                app:strokeWidth="2dp"
                style="@style/Widget.MegaMatch.Button"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/creditsButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="אודות"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:onClick="moveToCredits"
                    app:icon="@drawable/ic_about"
                    app:iconGravity="textStart"
                    app:iconPadding="4dp"
                    app:iconTint="@color/white"
                    style="@style/Widget.MegaMatch.Button"
                    android:layout_marginEnd="8dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/helpButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="עזרה"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:onClick="moveToHelp"
                    app:icon="@drawable/ic_help"
                    app:iconGravity="textStart"
                    app:iconPadding="4dp"
                    app:iconTint="@color/white"
                    style="@style/Widget.MegaMatch.Button"
                    android:layout_marginStart="8dp"/>

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout> 